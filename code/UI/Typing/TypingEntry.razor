@namespace Sandtype.UI.Typing
@using System
@using Sandbox.UI
@using Sandtype.Engine;
@attribute [StyleSheet("TypingEntry.razor.scss")]
@inherits Sandbox.UI.TextEntry

<root style="cursor: default; z-index: -1;"></root>

@code {

	public TypingGame Game;

	public override void OnButtonTyped( ButtonEvent e )
	{
		CaretColor = Color.Transparent;
		
		if ( e.Button == "tab" )
		{
			Game.Reset();
			return;
		}
		
		base.OnButtonTyped( e );
	}

}
