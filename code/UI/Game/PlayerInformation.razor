@namespace Sandtype.UI.Game
@attribute [StyleSheet("PlayerInformation.razor.scss")]
@using System
@using Sandbox.UI
@inherits Sandbox.UI.Panel

<root>
	<div class="player-text-line">
		<p class="player-text">Words Typed: @TypedWords</p>
		<p class="player-text">Terry ðŸ’¢ @TerryHealth / @TerryMaxHealth</p>
