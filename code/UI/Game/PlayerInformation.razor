@code {
	
	public TerryGame Game;
	public TypingTest Test;
	private int TerryHealth => Game?.TerryHealth ?? 0;
	private int TerryMaxHealth => Game?.TerryMaxHealth ?? 0;
	private int PlayerHealth => Game?.PlayerHealth ?? 0;
	private int PlayerMaxHealth => Game?.PlayerMaxHealth ?? 0;
	private int TypedWords => Test?.TypedWords ?? 0;

	protected override int BuildHash()
	{
		return HashCode.Combine( TypedWords, TerryHealth, TerryMaxHealth, PlayerHealth, PlayerMaxHealth );
	}

}
